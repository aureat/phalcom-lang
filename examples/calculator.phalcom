// A basic calculator class demonstrating methods, getters, and magic methods

class Calculator {
  add(a, b) {
    return a + b;
  }

  pi { return 3.1415; }

  +(other) {
    return 10 + other;
  }

  and(other) {
    return "and " + other;
  }

  new() {
    return self;
  }
}

let calc = Calculator.new();

print(calc.add(5, 3));         // 8
print(calc.subtract(10, 4));   // 6

print(calc.pi);                // 3.1415

print(calc + 20);              // 30

